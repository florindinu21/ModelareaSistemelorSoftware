@page "/users/{ProtectedId}"
@inherits UserDetailsComponent

<div class="row">
    <div class="col-md-12">
        @if (RegisteredUser != null)
        {
            <div class="card mb-3">
                <h3 class="card-header">User details</h3>
                <div class="card-body">
                    <div class="panel panel-info">
                        <div class="panel-body">
                            <div class="row">
                               
                                <div class=" col-md-9 col-lg-9 ">
                                    <table class="table table-user-information">
                                        <tbody>
                                            <tr>
                                                <td>Username</td>
                                                <td>@RegisteredUser.UserName</td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td><a href="mailto:@RegisteredUser.Email">@RegisteredUser.Email</a></td>
                                            </tr>
                                           
                                            <tr>
                                                <td>Registration date</td>
                                                <td>@RegisteredUser.RegistrationDate.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                                            </tr>
                                            <tr>
                                                <td>Statistics</td>
                                                <td>Questions asked: <strong>@RegisteredUser.TotalQuestions</strong> &nbsp&nbsp Total answers: <strong>@RegisteredUser.TotalAnswers</strong></td>
                                            </tr>
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <small>NO DATA AVAILABLE</small>
        }
    </div>
</div>
